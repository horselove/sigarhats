root = true

[*]
end_of_line = lf
indent_style = tab
tab_width = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = tab
tab_width = 2

[*.html]
indent_style = space
indent_size = 4

[*.ctp]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4
